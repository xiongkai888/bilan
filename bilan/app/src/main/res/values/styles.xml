<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/txt_14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="actionMenuTextAppearance">@style/menuTextStyle</item>
    </style>
    <!-- Base application theme. -->
    <style name="invite" parent="AppTheme">
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <!--菜单-->
    <style name="menuTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TabLayoutAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HomeTabLayoutAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/txt_14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="friendsTabLayoutAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/txt_14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--背景白色，有底部边框-->
    <style name="ll_bottom" parent="h_match_parent">
        <item name="android:background">@drawable/border_bottom_divider</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!--背景白色，有顶部边框-->
    <style name="ll_top" parent="h_match_parent">
        <item name="android:background">@drawable/border_top_divider</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="NavPage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">#FFE1E8EB</item>
    </style>

    <!--背景白色，有上下边框-->
    <style name="ll_h_border_bottom_and_top">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_bottom_top_1dp_bg_white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--背景白色，没有边框-->
    <style name="ll_no_border" parent="h_match_parent">
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--Toolbar TitleText-->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!--Toolbar TitleText-->
    <style name="invite.TitleText" parent="Toolbar.TitleText">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--水平直线-->
    <style name="line_H1dp_CD" parent="line_H1dp">
        <item name="android:background">@color/colorCDCD</item>
    </style>
    <!--水平直线-->
    <style name="line_H1dp_divider" parent="line_H1dp">
        <item name="android:background">@color/divider</item>
    </style>
    <!--垂直线-->
    <style name="line_v1dp_CD">
        <item name="android:layout_width">0.3dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorCDCD</item>
    </style>

    <style name="match_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="all_match_parent" parent="match_parent">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="h_match_parent" parent="match_parent">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="v_match_parent" parent="match_parent">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="line_H1dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.3dp</item>
    </style>

    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Size10" parent="text">
        <item name="android:textSize">@dimen/txt_10sp</item>
    </style>

    <style name="Text.Size12" parent="text">
        <item name="android:textSize">@dimen/txt_12sp</item>
    </style>

    <style name="Text.Size14" parent="text">
        <item name="android:textSize">@dimen/txt_14sp</item>
    </style>


    <style name="text14color2b" parent="Text.Size14">
        <item name="android:textColor">@color/color2b</item>
    </style>

    <style name="text14colorWhite" parent="Text.Size14">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text14color999" parent="Text.Size14">
        <item name="android:textColor">@color/color999</item>
    </style>

    <style name="text14colorAccent" parent="Text.Size14">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Text.Size16" parent="text">
        <item name="android:textSize">@dimen/txt_16sp</item>
    </style>

    <style name="text16colorBlack" parent="Text.Size16">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Size18" parent="text">
        <item name="android:textSize">@dimen/txt_18sp</item>
    </style>

    <style name="text12colorBlack" parent="Text.Size12">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="text10colorBlack" parent="Text.Size10">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text12color666" parent="Text.Size12">
        <item name="android:textColor">@color/color666</item>
    </style>

    <style name="text12color999" parent="Text.Size12">
        <item name="android:textColor">@color/color999</item>
    </style>

    <style name="text10color999" parent="Text.Size10">
        <item name="android:textColor">@color/color999</item>
    </style>

    <style name="text12colorWhite" parent="Text.Size12">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text10colorWhite" parent="Text.Size10">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text12colorPrimaryDark" parent="Text.Size12">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="text14colorPrimaryDark" parent="Text.Size14">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="text16colorWhite" parent="Text.Size16">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text10color61" parent="Text.Size10">
        <item name="android:textColor">@color/color61</item>
    </style>

    <style name="text10color2b" parent="Text.Size10">
        <item name="android:textColor">@color/color2b</item>
    </style>

    <style name="text12color2b" parent="Text.Size12">
        <item name="android:textColor">@color/color2b</item>
    </style>

    <style name="text16color2b" parent="Text.Size16">
        <item name="android:textColor">@color/color2b</item>
    </style>

    <style name="text_weight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="mine_text" parent="text_weight">
        <item name="android:paddingBottom">@dimen/d_12dp</item>
        <item name="android:paddingTop">@dimen/d_12dp</item>
    </style>

    <style name="in_right_icon" parent="text">
        <item name="android:layout_marginRight">@dimen/d_10dp</item>
        <item name="android:src">@mipmap/in_right</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_h</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_corners</item>
        <item name="android:layout_marginLeft">@dimen/d_15dp</item>
        <item name="android:layout_marginRight">@dimen/d_15dp</item>
        <item name="android:layout_marginTop">@dimen/d_10dp</item>
        <item name="android:layout_marginBottom">@dimen/d_10dp</item>
    </style>


    <style name="editText_bottom_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color2b</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:lines">1</item>
        <item name="android:background">@drawable/border_bottom_divider</item>
        <item name="android:textColorHint">@color/color999</item>
    </style>

    <!--10dF4线，没边框-->
    <style name="line_H10dp_no">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/d_10dp</item>
        <item name="android:background">@color/colorF4F4</item>
    </style>
    <!--10dF4线，有底部边框-->
    <style name="line_H10dp_bottom" parent="line_H10dp_no">
        <item name="android:background">@drawable/border_bottom_divider_f4</item>
    </style>

    <!--消息tab_text-->
    <style name="message_tab_text" parent="text_weight">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/d_8dp</item>
        <item name="android:textColor">@color/text_selector</item>
    </style>

    <!--相册底部弹框-->
    <style name="ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>

    <style name="setting_text" parent="text_weight">
        <item name="android:textColor">@color/color666</item>
        <item name="android:paddingTop">@dimen/d_12dp</item>
        <item name="android:paddingBottom">@dimen/d_12dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="in_image" parent="text">
        <item name="android:layout_marginRight">@dimen/d_10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@mipmap/icon_in</item>
    </style>


    <!--场外发布EditText-->
    <style name="market_publish_et" parent="text_weight">
        <item name="android:padding">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/spinner_bg</item>
    </style>

    <!--场外发布-->
    <style name="ll_market_chang" parent="ll_bottom">
        <item name="android:paddingTop">@dimen/d_10dp</item>
        <item name="android:paddingBottom">@dimen/d_10dp</item>
        <item name="android:paddingLeft">@dimen/d_10dp</item>
        <item name="android:paddingRight">@dimen/d_10dp</item>
    </style>


    <style name="style_navigation">
        <item name="android:layout_width">190dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>


    <style name="UI.Dialog" parent="android:style/Theme.Dialog">
        <!--背景颜色及透明程度-->
        <item name="android:windowBackground">@color/dim_bg</item>
        <!--是否有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否模糊，灰色背景-->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">false</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!--<item name="android:windowFrame">@null</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <item name="android:windowAnimationStyle">@style/dialogAnimation</item>
    </style>

    <!--进入 -->
    <style name="dialogAnimation">
        <!--进入 -->
        <item name="android:windowEnterAnimation">@anim/picker_panel_bottom_up</item>
        <!--退出-->
        <item name="android:windowExitAnimation">@anim/picker_panel_bottom_down</item>
    </style>

    <style name="mRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:minHeight">38dp</item>
        <item name="android:maxHeight">38dp</item>
    </style>

    <style name="commentRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar</item>
        <item name="android:minHeight">38dp</item>
        <item name="android:maxHeight">38dp</item>
    </style>

    <!-- 默认的style -->

    <style name="common_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="quick_option_dialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/transparency</item>
    </style>


</resources>
