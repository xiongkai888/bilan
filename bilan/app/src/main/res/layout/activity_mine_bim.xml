<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_centertitletoolbar" />

    <com.xson.common.widget.SmartSwipeRefreshLayout
        android:id="@+id/pull_refresh_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/divider"
        android:dividerHeight="0.5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_50dp"
        android:visibility="gone"
        android:background="@color/black"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/exchange_tv"
            style="@style/text_weight"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="兑换"
            android:textColor="@color/white" />

        <TextView
            style="@style/line_v1dp_CD" />

        <TextView
            android:id="@+id/give_tv"
            style="@style/text_weight"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="赠送"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>