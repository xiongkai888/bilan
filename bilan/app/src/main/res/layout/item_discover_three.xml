<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/v_match_parent"
    android:layout_margin="@dimen/d_5dp">

    <RelativeLayout
        style="@style/match_parent"
        android:padding="@dimen/d_8dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/default_pic_b" />


        <TextView
            android:id="@+id/content_tv"
            style="@style/text"
            android:layout_below="@id/image"
            android:layout_marginTop="@dimen/d_2dp"
            android:ellipsize="end"
            android:lines="2"
            android:text="[热销]以太坊挖矿机架子矿机架矿架显示固定架19显卡多显卡超强散热" />


        <TextView
            android:id="@+id/money_tv"
            style="@style/text"
            android:layout_marginTop="@dimen/d_2dp"
            android:text="@string/price_sub"
            android:layout_below="@id/content_tv"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/sell_num_tv"
            style="@style/text12color999"
            android:layout_marginTop="@dimen/d_2dp"
            android:layout_below="@id/content_tv"
            android:text="@string/selled"
            android:layout_alignParentRight="true"
            android:visibility="visible" />

    </RelativeLayout>

</LinearLayout>
