<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ll_top">

    <LinearLayout
        android:id="@+id/ll_collect"
        style="@style/text_weight"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_marginBottom="@dimen/d_2dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/collect_iv"
            style="@style/text"
            android:layout_margin="@dimen/d_5dp"
            android:src="@mipmap/icon_collect_off" />

        <TextView
            style="@style/text"
            android:text="@string/collect" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_service"
        style="@style/text_weight"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_marginBottom="@dimen/d_2dp"
        android:orientation="vertical">

        <ImageView
            style="@style/text"
            android:src="@mipmap/icon_service" />

        <TextView
            style="@style/text"
            android:text="@string/online_service" />

    </LinearLayout>


    <TextView
        android:id="@+id/add_shop_car_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="加入购物车"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/pay_now_tv"
        android:layout_weight="3"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textColor="@color/white"
        android:background="@color/colorAccent"
        android:text="立即购买" />

</LinearLayout>
