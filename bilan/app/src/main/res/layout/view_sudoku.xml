<?xml version="1.0" encoding="utf-8"?>
<com.lanmei.bilan.widget.SudokuView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.lanmei.bilan.widget.DoubleScaleImageView
        android:id="@+id/only_imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_200dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_pic_b" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</com.lanmei.bilan.widget.SudokuView>
