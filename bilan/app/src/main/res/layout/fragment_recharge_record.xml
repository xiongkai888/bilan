<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--充值记录-->

    <LinearLayout
        android:id="@+id/ll_recharge"
       style="@style/h_match_parent"
        android:padding="@dimen/d_10dp"
        android:background="@color/colorEEE">


        <TextView
            android:id="@+id/money_tv"
            style="@style/text14colorPrimaryDark"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="当前余额：￥0" />



        <TextView
            android:id="@+id/recharge_tv"
            style="@style/text12colorPrimaryDark"
            android:background="@drawable/ming"
            android:gravity="center"
            android:minWidth="@dimen/attention_minWidth"
            android:text="充值"/>

    </LinearLayout>

    <TextView style="@style/line_H1dp_CD" />

    <include layout="@layout/fragment_single_listview" />


</LinearLayout>
