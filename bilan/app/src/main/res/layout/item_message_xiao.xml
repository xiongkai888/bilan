<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ll_no_border"
    android:padding="10dp">


    <com.xson.common.widget.CircleImageView
        android:id="@+id/user_head_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/default_pic" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            style="@style/text14color2b"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="李开复" />
        <TextView
            android:id="@+id/name_tv"
            style="@style/text14color999"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="开通会员成功！！！" />


    </LinearLayout>


  <LinearLayout
      android:layout_width="wrap_content"
      style="@style/v_match_parent">


      <TextView
          style="@style/text12color999"
          android:text="下午2:30" />
      <TextView
          android:layout_gravity="right"
          android:layout_marginRight="@dimen/d_10dp"
          android:background="@drawable/circle_message"
          style="@style/text10colorWhite"
          android:layout_width="@dimen/d_20dp"
          android:layout_height="@dimen/d_20dp"
          android:gravity="center"
          android:text="99+" />



  </LinearLayout>


</LinearLayout>
