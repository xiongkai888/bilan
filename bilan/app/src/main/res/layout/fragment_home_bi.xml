<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorF4F4">

    <TextView
        android:id="@+id/time_tv"
        android:paddingLeft="@dimen/d_10dp"
        android:paddingBottom="@dimen/d_3dp"
        android:paddingTop="@dimen/d_3dp"
        android:textSize="@dimen/txt_12sp"
        android:textColor="@color/color666"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.xson.common.widget.SmartSwipeRefreshLayout
        android:id="@+id/pull_refresh_rv"
        android:layout_below="@id/time_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
