<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/title_tv"
        style="@style/text"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:padding="@dimen/d_10dp"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/d_5dp"
            android:orientation="horizontal">


            <com.xson.common.widget.CircleImageView
                android:id="@+id/head_iv"
                android:layout_width="@dimen/d_50dp"
                android:layout_height="@dimen/d_50dp"
                android:src="@mipmap/default_pic" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_tv"
                    style="@style/text"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/time_tv"
                    style="@style/text12colorBlack"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp" />


            </LinearLayout>



        </LinearLayout>

        <TextView
            android:id="@+id/attention_tv"
            style="@style/text12colorPrimaryDark"
            android:background="@drawable/ming"
            android:gravity="center"
            android:minWidth="@dimen/attention_minWidth"
            android:text="@string/attention"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/collect_tv"
            style="@style/text12colorPrimaryDark"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ming"
            android:gravity="center"
            android:minWidth="@dimen/attention_minWidth"
            android:text="@string/collected"
            android:textColor="@color/white" />
    </LinearLayout>



    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cname_tv"
            style="@style/text10color999" />

        <TextView
            android:id="@+id/comment_tv"
            style="@style/text10color999"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/time1_tv"
            style="@style/text10color999"
            android:layout_marginLeft="10dp" />

    </LinearLayout>
</LinearLayout>