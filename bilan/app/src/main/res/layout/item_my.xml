<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/h_match_parent"
    android:gravity="center_vertical"
    android:padding="@dimen/d_10dp">

    <LinearLayout
        style="@style/text_weight"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_tv"
            style="@style/text"
            android:text="签到有奖" />

        <TextView
            android:layout_marginTop="@dimen/d_5dp"
            android:id="@+id/content_tv"
            style="@style/text12color999"
            android:text="签到有奖，每日限一次" />

    </LinearLayout>

    <TextView
        android:id="@+id/button_tv"
        style="@style/text12colorWhite"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ming"
        android:gravity="center"
        android:minWidth="@dimen/attention_minWidth" />

</LinearLayout>