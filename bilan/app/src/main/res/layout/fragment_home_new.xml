<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_55dp"
        android:background="@color/colorF8F8F8">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <com.xson.common.widget.CircleImageView
                android:layout_width="@dimen/d_30dp"
                android:layout_height="@dimen/d_30dp"
                android:src="@mipmap/logo" />


            <TextView
                style="@style/text16colorBlack"
                android:layout_marginLeft="@dimen/d_5dp"
                android:text="@string/app_name" />


        </LinearLayout>


        <ImageView
            android:id="@+id/imge_iv"
            android:layout_width="@dimen/d_30dp"
            android:layout_height="@dimen/d_30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginRight="@dimen/d_10dp"
            android:src="@mipmap/icon_publish" />

    </RelativeLayout>

    <include layout="@layout/include_tablayout" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
