<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   style="@style/ll_bottom"
    android:padding="@dimen/d_10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/items_icon_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="@dimen/d_10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/default_pic" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_tv"
                style="@style/text"

                android:lines="2"
                android:ellipsize="end"
                android:text="@string/temp_text" />

            <LinearLayout
                android:id="@+id/ll_info"
                style="@style/text"
                android:layout_margin="@dimen/d_10dp"
                android:layout_gravity="right|bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/reserve_time_tv"
                    style="@style/text"
                    android:textColor="@color/colorAccent"
                    android:text="@string/price_sub_value" />

                <TextView
                    android:id="@+id/num_people_tv"
                    style="@style/text12color999"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:text="x1" />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>
