<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ll_no_border"
    android:padding="10dp">


    <com.xson.common.widget.CircleImageView
        android:id="@+id/head_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/default_pic" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_tv"
            style="@style/text14color2b"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:lines="1" />
        <TextView
            android:id="@+id/content_tv"
            style="@style/text12color999"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:lines="1" />


    </LinearLayout>


    <TextView
        android:id="@+id/attention_tv"
        style="@style/text12colorPrimaryDark"
        android:background="@drawable/ming"
        android:gravity="center"
        android:minWidth="@dimen/attention_minWidth"
        android:text="@string/attention" />


</LinearLayout>
