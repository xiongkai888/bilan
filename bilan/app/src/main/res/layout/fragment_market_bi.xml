<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorF4F4"
    android:orientation="vertical">


    <include layout="@layout/include_centertitletoolbar"/>

    <LinearLayout
        style="@style/ll_bottom"
        android:paddingBottom="@dimen/d_10dp"
        android:paddingLeft="@dimen/d_5dp"
        android:paddingRight="@dimen/d_5dp"
        android:paddingTop="@dimen/d_10dp">

        <TextView
            android:id="@+id/name_tv"
            style="@style/text_weight"
            android:layout_weight="2"
            android:gravity="center"
            android:text="名称" />

        <LinearLayout
            android:id="@+id/deal_price_tv"
            style="@style/text_weight"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/text"
                android:gravity="center"
                android:text="成交价" />


            <ImageView
                android:visibility="visible"
                android:id="@+id/deal_price_iv"
                style="@style/text"
                android:layout_marginLeft="@dimen/d_2dp"
                android:src="@mipmap/sort_default" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/deal_num_tv"
            style="@style/text_weight"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/text"
                android:gravity="center"
                android:text="成交量" />

            <ImageView
                android:visibility="visible"
                android:id="@+id/deal_num_iv"
                style="@style/text"
                android:layout_marginLeft="@dimen/d_2dp"
                android:src="@mipmap/sort_default" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/deal_e_tv"
            style="@style/text_weight"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                style="@style/text"
                android:gravity="center"
                android:text="成交額" />

            <ImageView
                android:visibility="visible"
                android:id="@+id/deal_e_iv"
                style="@style/text"
                android:layout_marginLeft="@dimen/d_2dp"
                android:src="@mipmap/sort_default" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rise_tv"
            style="@style/text_weight"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                style="@style/text"
                android:gravity="center"
                android:text="涨跌幅" />

            <ImageView
                android:visibility="visible"
                android:id="@+id/rise_iv"
                style="@style/text"
                android:layout_marginLeft="@dimen/d_2dp"
                android:src="@mipmap/sort_default" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/fragment_single_listview" />
</LinearLayout>
