<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ll_no_border"
    android:paddingBottom="@dimen/d_10dp"
    android:paddingTop="@dimen/d_10dp"
    android:paddingRight="@dimen/d_5dp"
    android:paddingLeft="@dimen/d_5dp">

    <TextView
        android:id="@+id/name_tv"
        android:gravity="center"
        android:layout_weight="2"
        android:textSize="@dimen/txt_10sp"
        style="@style/text_weight" />
    <TextView
        android:id="@+id/deal_price_tv"
        android:gravity="center"
        android:layout_weight="3"
        android:textSize="@dimen/txt_12sp"
        style="@style/text_weight" />

    <TextView
        android:id="@+id/deal_num_tv"
        android:gravity="center"
        android:textSize="@dimen/txt_12sp"
        android:layout_weight="3"
        style="@style/text_weight" />


    <TextView
        android:id="@+id/deal_e_tv"
        android:gravity="center"
        android:layout_weight="3"
        android:textSize="@dimen/txt_12sp"
        style="@style/text_weight" />

    <TextView
        android:id="@+id/rise_tv"
        android:gravity="center"
        android:layout_weight="3"
        android:textSize="@dimen/txt_12sp"
        style="@style/text_weight" />


</LinearLayout>
