<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/rotate_iv"
        android:visibility="visible"
        android:layout_width="500dp"
        android:layout_height="600dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/float_congratulation_bg_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/d_15dp"
        android:paddingLeft="@dimen/d_15dp"
        android:visibility="visible"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/sign"
                android:minWidth="220dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_5dp"
                    android:layout_marginRight="@dimen/d_5dp"
                    android:layout_marginTop="@dimen/d_60dp" />

                <TextView
                    android:id="@+id/sign_tv"
                    style="@style/text14colorWhite"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="@dimen/d_10dp"
                    android:background="@mipmap/sign_2"
                    android:gravity="center"
                    android:text="立即签到" />


            </FrameLayout>


            <ImageView
                style="@style/text"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/sign_1" />

        </FrameLayout>


        <ImageView
            android:id="@+id/crossIv"
            style="@style/text"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d_10dp"
            android:src="@mipmap/sign_3" />

    </LinearLayout>

</RelativeLayout>
